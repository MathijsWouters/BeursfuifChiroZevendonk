<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Beursfuif.Views.ManageDrinksPage"
             Title="Manage Drinks">
    <VerticalStackLayout Spacing="10" Padding="10">
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Save Layout" Style="{StaticResource NavigationButtonStyle}" Clicked="OnSaveLayoutClicked"/>
            <Button Text="Load Layout" Style="{StaticResource NavigationButtonStyle}" Clicked="OnLoadLayoutClicked"/>
        </HorizontalStackLayout>
        <ScrollView>
            <VerticalStackLayout x:Name="DrinksLayout" Spacing="10" Padding="10">
            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>