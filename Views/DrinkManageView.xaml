<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Beursfuif.Views.DrinkManageView">
    <Grid ColumnDefinitions="*,Auto,Auto">
        <Label Text="{Binding Name}" Grid.Column="0"/>
        <!-- Add more labels for price, color, etc. -->

        <!-- Edit Button -->
        <Button Text="Edit" Grid.Column="1" Clicked="OnEditClicked"/>

        <!-- Delete Button -->
        <Button Text="Delete" Grid.Column="2" Clicked="OnDeleteClicked"/>
    </Grid>
</ContentView>
