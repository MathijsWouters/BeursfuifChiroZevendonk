<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Beursfuif.Views.BeursPage"
             Title="BeursPage">

    <Grid RowDefinitions="3*,1*">

        <BoxView Grid.Row="0" Color="LightGray" />

        <ScrollView Grid.Row="1" Orientation="Horizontal" VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Never">

            <HorizontalStackLayout x:Name="DrinksLayout" 
                                   Spacing="10"
                                   HorizontalOptions="CenterAndExpand" 
                                   VerticalOptions="CenterAndExpand">
            </HorizontalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>

