<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BeursfuifChiroZevendonk.ViewModels"
             x:Class="BeursfuifChiroZevendonk.Views.SettingsPage"
             x:DataType="vm:SettingsPageViewModel"
             Title="">

    <!-- StackLayout to position the "Go to MainPage" button at the top -->
    <StackLayout Padding="20" Spacing="10">
        <Button Text="Go to MainPage"
                Command="{Binding NavigateToMainPageCommand}"
                Style="{StaticResource NavigationButtonStyle}"
                HorizontalOptions="Start"
                VerticalOptions="Start" />

    </StackLayout>
</ContentPage>
