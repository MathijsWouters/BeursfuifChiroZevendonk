<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Beursfuif.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Beursfuif.Views"
    xmlns:local="clr-namespace:Beursfuif"
    Shell.FlyoutBehavior="Flyout"
    Title="Beursfuif">

    <ShellContent
        Title="Beursfuif"
        ContentTemplate="{DataTemplate view:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Add Drink"
        ContentTemplate="{DataTemplate view:AddDrinkPage}"
        Route="AddDrinkPage" />
    <ShellContent
        Title="Manage Drinks"
        ContentTemplate="{DataTemplate view:ManageDrinksPage}"
        Route="ManageDrinksPage" />
    <ShellContent
    Title="Beurs"
    ContentTemplate="{DataTemplate view:BeursPage}"
    Route="BeursPage" />

</Shell>
